<?xml version='1.0' encoding='utf-8'?>
<widget id="net.rddev.vktunesmobile" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>VK-Tunes Mobile</name>
    <description>
        Manage and download music from your vk.com account to your device.
    </description>
    <author email="rd.dev.ukraine@gmail.com" href="http://rd-dev.net">
        RD-DEV.NET Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="~5.1.1" />
    <plugin name="cordova-plugin-inappbrowser" spec="~1.2.1" />
    <plugin name="cordova-plugin-file-transfer" spec="~1.5.0" />
    <plugin name="cordova-plugin-file" spec="~4.1.1" />
    <engine name="browser" spec="~4.0.0" />
    <engine name="windows" spec="~4.3.1" />
</widget>
